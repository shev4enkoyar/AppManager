@page "/"
@attribute [Route(Paths.ProjectList)]

<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.False">
    <MudGrid>
        @foreach (var item in _projectListPage.Items)
        {
            <CustomGridCard OnCardClicked="() => OnCardClickHandler(item.Id)"
                            OnSettingButtonClick="() => OnSettingButtonClickedHandler(item.Id)"
                            Title="@item.Name"
                            Text="@item.Description"/>
        }
    </MudGrid>
</MudContainer>