@attribute [Route(Paths.Project)]
@using ApexCharts
@using Size = ApexCharts.Size
@using WebUIBlazor.Components.Shared

<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.False">
    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudGrid>
                <MudItem xs="12">
                    <CustomPaperCard>
                        <MudText Typo="Typo.h6">Active users per version</MudText>
                    </CustomPaperCard>
                </MudItem>
                <MudItem xs="12">
                    <CustomPaperCard>
                        <MudText Typo="Typo.h6">Country/Region</MudText>
                    </CustomPaperCard>
                </MudItem>
            </MudGrid>
        </MudItem>
        <MudItem xs="12" sm="6">
            <CustomPaperCard Style="height: 100%">
                <MudText Typo="Typo.h6">Top OS</MudText>
            </CustomPaperCard>
        </MudItem>
        <MudItem xs="12" sm="8" md="8">
            <CustomPaperCard>
                <MudText Typo="Typo.h6">Active users</MudText>
                <ApexChart Options="Options" Height="150" TItem="MyData">

                    <ApexPointSeries TItem="MyData"
                                     Items="Data"
                                     Name="Active users"
                                     SeriesType="SeriesType.Line"
                                     XValue="@(e => e.Category)"
                                     YAggregate="@(e => e.Sum(e => e.NetProfit))"/>
                </ApexChart>
            </CustomPaperCard>
        </MudItem>
        <MudItem xs="12" sm="4" md="4">
            <CustomPaperCard OnClick="OnAnnexesPaperClickHandler">
                <MudText Typo="Typo.h6">Annexes</MudText>
            </CustomPaperCard>
        </MudItem>
    </MudGrid>
</MudContainer>



