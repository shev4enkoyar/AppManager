@using MudExtensions.Enums
<MudItem xs="@Xs" sm="@Sm" md="@Md">
    <MudCard Class="@($"animId{AnimationId}")"
             @onclick="OnCardClickHandler"
             @onmouseenter="OnCardMouseEnterHandler"
             @onmouseleave="OnCardMouseLeaveHandler"
             Elevation="2">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="@HeaderTypo">@Title</MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIconButton OnClick="OnSettingButtonClickHandler"
                               Style="@(ShowSettingButtonAlways ? string.Empty : IsShowCardButtons ? string.Empty : "visibility: hidden")"
                               Icon="@Icons.Material.Filled.Settings"
                               Color="Color.Default"/>
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>
            <MudText>@Text</MudText>
        </MudCardContent>
    </MudCard>
</MudItem>

<MudAnimate Selector="@($".animId{AnimationId}")" Duration="_duration" AnimationType="AnimationType.Shadow" Value="_value" Hover="true" Infinite="true"
            AnimationTiming="_animationTiming" AnimationDirection="_animationDirection" AnimationFillMode="_animationFillMode"/>